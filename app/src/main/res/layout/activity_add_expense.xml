<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etxtSum"
        android:singleLine="true"
        android:layout_toEndOf="@+id/textCategory"
        android:layout_alignParentTop="true"
        android:inputType="number|numberDecimal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toLeftOf="@+id/spinnerCurrency"
        android:layout_marginRight="90dp"
        android:layout_toRightOf="@+id/textExpensed"
        android:layout_marginLeft="10dp"
        android:gravity="right"
        android:textSize="25dp"
        android:maxLength="20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sum"
        android:id="@+id/textExpensed"
        android:layout_alignBottom="@+id/etxtSum"
        android:layout_alignLeft="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Category"
        android:id="@+id/textCategory"
        android:layout_below="@+id/etxtSum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/view" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentStart="true"
        android:id="@+id/view"
        android:paddingBottom="10dp"
        android:layout_below="@+id/textCategory"
        android:layout_alignParentLeft="true" />

    <FrameLayout
        android:id="@+id/categoryListContainer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/textCategory"
        android:layout_alignParentLeft="true" />

    <Spinner
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerCurrency"
        android:focusableInTouchMode="false"
        android:layout_alignBottom="@+id/etxtSum"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view" />

</RelativeLayout>