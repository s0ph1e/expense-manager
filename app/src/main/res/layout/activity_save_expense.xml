<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <!-- Magic for preventing focus on EditText-->
    <LinearLayout
        android:focusable="true" android:focusableInTouchMode="true"
        android:layout_width="0px" android:layout_height="0px"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etxtSum"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:inputType="number|numberDecimal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toLeftOf="@+id/spinnerCurrency"
        android:layout_marginRight="90dp"
        android:gravity="right"
        android:imeOptions="actionDone"
        android:maxLength="20"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="@string/hint_expensed_sum"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_category"
        android:id="@+id/textCategory"
        android:layout_below="@+id/etxtSum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/categoryContainerTopLine"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentStart="true"
        android:id="@+id/categoryContainerTopLine"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textCategory"
        android:layout_alignParentLeft="true" />

    <FrameLayout
        android:id="@+id/categoryListContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/categoryContainerTopLine"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/categoryContainerBottomLine">
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentStart="true"
        android:id="@+id/categoryContainerBottomLine"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/bottomLayout" />

    <Spinner
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerCurrency"
        android:focusableInTouchMode="false"
        android:layout_alignBottom="@+id/etxtSum"
        android:layout_alignRight="@+id/categoryContainerTopLine"
        android:layout_alignEnd="@+id/categoryContainerTopLine" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/bottomLayout">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnPickDate"
            style="@style/SpinnerButtonStyle"
            android:text="@string/today"
            android:gravity="bottom|center_horizontal"
            android:editable="false" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etxtNote"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:hint="@string/expense_note_hint"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</RelativeLayout>