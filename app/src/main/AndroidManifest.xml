<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.pp.appdev.expense" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SaveExpenseActivity"
            android:label="@string/title_activity_add_expense"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:parentActivityName=".activities.StartActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ua.pp.appdev.expense.StartActivity" />
        </activity>
        <activity
            android:name=".activities.SaveCategoryActivity"
            android:label="@string/title_activity_add_category"
            android:windowSoftInputMode="stateAlwaysVisible">
        </activity>
    </application>

</manifest>
